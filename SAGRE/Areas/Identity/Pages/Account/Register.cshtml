                </div>
            </div>
        </div>
    </div>
</div>

<div class="col mt-5">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h4>Criar Nova Conta.</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Nome"></label>
            <input asp-for="Input.Nome" class="form-control" />
            <span asp-validation-for="Input.Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-sm btn-success float-right ml-3">Register</button>
    </form>
        <button type="button" class="btn btn-sm btn-warning float-right" asp-controller="Home" asp-action="Index">Voltar</button>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
