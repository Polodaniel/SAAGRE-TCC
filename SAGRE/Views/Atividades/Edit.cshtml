@model SAGRE.Models.AtividadesModel

@{
    ViewData["Title"] = "Editar Atividade";
}

<div class="col mt-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Ínicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">
                        <h5> <i class="fas fa-people-carry mr-3"></i> @Html.DisplayFor(model => model.NomeAtividade)</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <div class="row">
                                    <div class="col-2 font-weight-bold">
                                        <label asp-for="NomeAtividade" class="control-label"></label>
                                    </div>
                                    <div class="col">
                                        <input asp-for="NomeAtividade" class="form-control" />
                                        <span asp-validation-for="NomeAtividade" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-2 font-weight-bold">
                                        <label asp-for="DescricaoAtividade" class="control-label"></label>
                                    </div>
                                    <div class="col">
                                        <textarea asp-for="DescricaoAtividade" class="form-control"></textarea>
                                        <span asp-validation-for="DescricaoAtividade" class="text-danger"></span>
                                    </div>
                                </div>
                                <hr />
                                <div class="row">
                                    <div class="col-2 font-weight-bold">
                                        Status
                                    </div>
                                    <div class="col">
                                        <div class="checkbox">
                                            <label>
                                                <input asp-for="Inativo" /> @Html.DisplayNameFor(model => model.Inativo)
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col text-right">
                                <a asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a>
                                <input type="submit" value="Salvar" class="btn btn-sm btn-success" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
