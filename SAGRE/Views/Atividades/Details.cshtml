@model SAGRE.Models.AtividadesModel

@{
    ViewData["Title"] = "Detalhes da Atividade";
}

<div class="col mt-2">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Ínicio</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5> <i class="fas fa-people-carry mr-3"></i> @Html.DisplayFor(model => model.NomeAtividade)</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <div class="row">
                                <div class="col-2 font-weight-bold">
                                    @Html.DisplayNameFor(model => model.NomeAtividade):
                                </div>
                                <div class="col">
                                    @Html.DisplayFor(model => model.NomeAtividade)
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-2 font-weight-bold">
                                    @Html.DisplayNameFor(model => model.DescricaoAtividade):
                                </div>
                                <div class="col">
                                    @{
                                        @if (Model.DescricaoAtividade == null)
                                        {
                                            <label class="font-italic font-weight-light">Sem Descrição Cadastrado</label>
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(model => model.DescricaoAtividade)
                                        }
                                    }
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-2 font-weight-bold">
                                    Status
                                </div>
                                <div class="col">
                                    @Html.DisplayFor(model => model.Status)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col text-right">
                            <a asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a>
                            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-sm btn-warning">Editar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>